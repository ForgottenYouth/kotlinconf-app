<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/live_title"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/druk_font"
                android:text="@string/live_now"
                android:textColor="@color/red_orange"
                android:textSize="80sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/live_cards_container"
                android:layout_width="match_parent"
                android:layout_height="278dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/live_title" />

            <TextView
                android:id="@+id/dont_miss_title"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="47dp"
                android:fontFamily="@font/druk_font"
                android:text="@string/don_t_miss"
                android:textColor="@color/white"
                android:textSize="80sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/live_cards_container" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dont_miss_block"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/dont_miss_title" />

            <TextView
                android:id="@+id/tweet_title"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/druk_font"
                android:text="@string/tweet_title"
                android:textColor="@color/white"
                android:textSize="80sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dont_miss_block" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tweet_feed_list"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tweet_title" />

            <TextView
                android:id="@+id/partners_title"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/druk_font"
                android:text="@string/partners_title"
                android:textColor="@color/white"
                android:textSize="80sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tweet_feed_list" />

            <TextView
                android:id="@+id/show_partners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginRight="24dp"
                android:gravity="end"
                android:lineSpacingExtra="9sp"
                android:text="See All"
                android:textColor="@color/red_orange"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tweet_feed_list" />

            <HorizontalScrollView
                android:id="@+id/partners_view"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/partners_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="77dp">


                    <ImageView
                        android:id="@+id/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="53dp"
                        android:src="@drawable/logo_android"
                        android:tag="android"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/gradle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="48dp"
                        android:src="@drawable/logo_gradle"
                        android:tag="gradle"
                        app:layout_constraintStart_toEndOf="@id/android"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/instil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="53dp"
                        android:layout_marginRight="209dp"
                        android:src="@drawable/logo_instl"
                        android:tag="instill"
                        app:layout_constraintStart_toEndOf="@id/gradle"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/n26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="90dp"
                        android:src="@drawable/logo_n_26"
                        android:tag="n26"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/android" />

                    <ImageView
                        android:id="@+id/kodein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="100dp"
                        android:src="@drawable/logo_kodein"
                        android:tag="kodein"
                        app:layout_constraintStart_toEndOf="@id/n26"
                        app:layout_constraintTop_toBottomOf="@id/android" />

                    <ImageView
                        android:id="@+id/l47"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="81dp"
                        android:src="@drawable/logo_47"
                        android:tag="47"
                        app:layout_constraintStart_toEndOf="@id/kodein"
                        app:layout_constraintTop_toBottomOf="@id/android" />

                    <ImageView
                        android:id="@+id/freenow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="75dp"
                        android:src="@drawable/logo_freenow"
                        android:tag="freenow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/n26" />

                    <ImageView
                        android:id="@+id/bitrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="86dp"
                        android:layout_marginTop="74dp"
                        android:src="@drawable/logo_bitrise"
                        android:tag="bitrise"
                        app:layout_constraintStart_toEndOf="@id/freenow"
                        app:layout_constraintTop_toBottomOf="@id/n26" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>